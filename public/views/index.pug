doctype html
html(lang='en')
    head
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    header
        h1 ML app - Análisis de precios
    body
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        form(action='/listado', method='POST')
            div.form-group
                input(type="marca", placeholder="Ingresar Marca", required=false, name='marca', value='').form-control
                input(type="modelo", placeholder="Ingresar Modelo", required=false, name='modelo', value='').form-control
                button.mt-3.btn.btn-primary(type='submit') Buscar
        button#graph.mt-3.btn.btn-primary(type='button') Graficar (Histograma de tabla actual)

    table
        tr
            td
                div(style="width: 600px;")
                    canvas#myChart
            td
                div(style="width: 600px;")
                canvas#myChart2


        if storedData
            table.table(id="mytable")
                thead
                    tr
                        th(scope="col", style="width: 15%")
                            .dropdown
                                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(data-bs-toggle="dropdown", type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    | Title
                                .dropdown-menu(aria-labelledby="dropdownMenuButton")
                                    input(type="text", id="myInput", placeholder="Enter filter", onkeyup="myFunction()")
                        th(scope="col")
                            .dropdown
                                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(data-bs-toggle="dropdown", type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    | Kilometers
                                .dropdown-menu(aria-labelledby="dropdownMenuButton")
                                    a.dropdown-item(href="#" id="firstkm") 0-25000
                                    a.dropdown-item(href="#" id="secondkm") 25001-50000
                                    a.dropdown-item(href="#" id="thirdkm") 50001-100000
                                    a.dropdown-item(href="#" id="fourthkm") +100000
                                    a.dropdown-item(href="#" id="allkm") all
                        th(scope="col") Price
                        th(scope="col")
                            .dropdown
                                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(data-bs-toggle="dropdown", type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    | Year
                                .dropdown-menu(aria-labelledby="dropdownMenuButton")
                                    a.dropdown-item(href="#" id="firstyear") 20/21/22
                                    a.dropdown-item(href="#" id="secondyear") 18/19/20
                                    a.dropdown-item(href="#" id="thirdyear") 16/17/18
                                    a.dropdown-item(href="#" id="fourthyear") -2016
                                    a.dropdown-item(href="#" id="allyear") all
                        th(scope="col") Engine
                        th(scope="col")
                            .dropdown
                                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(data-bs-toggle="dropdown", type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    | Transmission
                                .dropdown-menu(aria-labelledby="dropdownMenuButton")
                                    a.dropdown-item(href="#" id="manual") Manual
                                    a.dropdown-item(href="#" id="automatic") Automática
                                    a.dropdown-item(href="#" id="alltransmission") All
                        th(scope="col")
                            .dropdown
                                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(data-bs-toggle="dropdown", type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    | Fuel
                                .dropdown-menu(aria-labelledby="dropdownMenuButton")
                                    a.dropdown-item(href="#" id="nafta") Nafta
                                    a.dropdown-item(href="#" id="naftagnc") Nafta/GNC
                                    a.dropdown-item(href="#" id="diesel") Diesel
                                    a.dropdown-item(href="#" id="allfuel") All
                        th(scope="col", style="width: 10%") Link
                tbody
                    each car in storedData
                         tr
                            td(class="title") #{car.title}
                            td(class="kilometers") #{car.kilometers}
                            td $ #{car.price}
                            td(class="year") #{car.year}
                            td #{car.engine}
                            td(class="transmission") #{car.transmission}
                            td(class="fuel") #{car.fuel}
                            td #{car.link}



    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js", integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js", integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js", integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl", crossorigin="anonymous")
    script(src="script.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script.
        const ctx = document.getElementById('myChart');
        const $graphButton = document.querySelector('#graph');

        let myChart;

        $graphButton.onclick = () => {
            let prices = [];
            let indexes = [];

            if (myChart) {
                myChart.destroy();
            };

            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                if( !(tr[i].style.display == "none") ) {
                    let price = tr[i].cells[2].textContent;
                    price = parseInt( price.replace(/[^0-9]+/g,"") );
                    prices.push(price);
                    indexes.push(i);
                }
            };

            const cfg = {
                type: 'bar',
                data: {
                    labels: indexes,
                    datasets: [{
                    label: '$ ',
                    data: prices,
                    borderWidth: 1
                    }]
                },
                options: {
                    scales: { y: { beginAtZero: true }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            }

            myChart = new Chart(ctx, cfg);
        };